<div class="header">
  <div class="isu-title">
    <h1>Iscogram</h1>
  </div>
  <div class="isu-account-name">
    <% if user[:id] != 0 %>
    <div><a href="/mypage"><%=  escape_html user[:account_name] %>さん</a></div>
    <div><a href="/logout">ログアウト</a></div>
    <% else %>
    <div><a href="/login">ログイン</a></div>
    <% end %>
  </div>
</div>

<div class="isu-submit">
  <form method="post" action="/" enctype="multipart/form-data">
    <div class="isu-form">
      <input type="file" name="file" value="file">
    </div>
    <div class="isu-form">
      <textarea name="body"></textarea>
    </div>
    <div class="form-submit">
      <input type="hidden" name="csrf_token" value="<%= escape_html session.id %>">
      <input type="submit" name="submit" value="submit">
    </div>
    <% if flash[:notice] %>
    <div id="notice-message" class="alert alert-danger">
      <%= escape_html(flash[:notice]) %>
    </div>
    <% end %>
  </form>
</div>

<%= erb :posts, layout: :layout, locals: { posts: posts, user: user } %>

<div id="isu-post-more">
  <button id="isu-post-more-btn">More</button>
</div>
